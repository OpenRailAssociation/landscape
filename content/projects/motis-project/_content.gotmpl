{{ $data := index .Site.Data "motis-project" }}
{{ range $key, $project := $data }}

  {{ $content := dict
    "mediaType" "text/markdown"
    "value" $project.description.en.shortDescription
  }}

  {{ $page := dict
    "content" $content
    "kind" "page"
    "path" $key
    "title" $project.name
    "params" (dict "capabilities" $project.businessCapabilities.capabilities)
  }}

  {{ $.AddPage $page }}

{{ end }}
